# Production Environment Configuration
NODE_ENV=production
PORT=3002

# Database Configuration - Update with production values
DB_HOST=your_production_db_host
DB_USER=your_production_db_user
DB_PASSWORD=your_production_db_password
DB_NAME=dozyr_production

# JWT Configuration - Use strong secrets in production
JWT_SECRET=your_super_secure_jwt_secret_key_minimum_256_bits_long
JWT_EXPIRES_IN=7d

# Admin Configuration
ADMIN_EMAIL=admin@yourdomain.com
ADMIN_PASSWORD=secure_admin_password_change_this

# API Configuration
API_VERSION=v1
CLIENT_URL=https://yourdomain.com

# Stripe Configuration - Use live keys in production
STRIPE_SECRET_KEY=sk_live_your_live_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_live_your_live_stripe_publishable_key

# Email Configuration - Configure for production
SMTP_HOST=your_smtp_host
SMTP_PORT=587
SMTP_USER=your_smtp_username
SMTP_PASS=your_smtp_password
FROM_EMAIL=noreply@yourdomain.com

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,doc,docx

# Security Configuration
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100
AUTH_RATE_LIMIT_MAX=5
MESSAGE_RATE_LIMIT_MAX=10

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# CORS Configuration
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com