# Production Environment Configuration
NODE_ENV=production
PORT=3000

# Database Configuration - Railway MySQL (will be auto-filled)
DB_HOST=${{MYSQL_HOST}}
DB_USER=${{MYSQL_USER}}
DB_PASSWORD=${{MYSQL_PASSWORD}}
DB_NAME=${{MYSQL_DATABASE}}

# JWT Configuration - Use strong secrets in production
JWT_SECRET=dozyr_super_secure_jwt_secret_key_for_production_2024_change_this_in_railway
JWT_EXPIRES_IN=7d

# Admin Configuration
ADMIN_EMAIL=admin@yellowgenie.io
ADMIN_PASSWORD=Admin123!ChangeThis

# API Configuration
API_VERSION=v1
CLIENT_URL=https://dozyr.co

# Stripe Configuration - Test keys for now
STRIPE_SECRET_KEY=sk_test_your_stripe_test_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_test_key

# Email Configuration - Configure later
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=admin@yellowgenie.io
SMTP_PASS=your_smtp_password
FROM_EMAIL=noreply@yellowgenie.io

# File Upload Configuration
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf

# Security Configuration - Relaxed for free tier
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=200
AUTH_RATE_LIMIT_MAX=10
MESSAGE_RATE_LIMIT_MAX=20

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# CORS Configuration
ALLOWED_ORIGINS=https://dozyr.co,https://dozyr.vercel.app,https://www.dozyr.co